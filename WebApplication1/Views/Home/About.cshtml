@model WebApplication1.Models.Student

@{
    ViewBag.Title = "About";
}

<hr />
@*<form method="post" action="/Home/SaveStu">   /Controller/SavteStu *@

@using (Html.BeginForm("SaveStu", "Home"))
{
    <h1>Student Information</h1>

    @Html.ValidationSummary("", htmlAttributes: new { @class = "text-danger" })

    @Html.HiddenFor(x => x.Id)
    <div class="form-group">
        @Html.LabelFor(x => x.Name)
        @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.Name, "", htmlAttributes: new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(x => x.Description)
        @Html.TextBoxFor(x => x.Description, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.Description, "", htmlAttributes: new { @class = "text-danger" })
    </div>

    <div class="form-group">
        <label>Course</label>
        @Html.DropDownList("Subject", new List<SelectListItem>
    {
    new SelectListItem { Text = "ASP.NET", Value = "1"},
    new SelectListItem { Text = "PHP", Value = "2"},
    }, "Select Course", new { @class = "form-control" })

    </div>

    <div class="form-group">
        @Html.LabelFor(x => x.DateBirth)
        @Html.EditorFor(x => x.DateBirth, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(x => x.DateBirth, "", htmlAttributes: new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(x => x.Score)
        @Html.EditorFor(x => x.Score, new { htmlAttributes = new { @class = "form-control" } })
    </div>

    @*@Html.ActionLink("Save", "Contact", null, new { @class = "btn btn-success", type="submit" })*@

    <input type="submit" value="Save" class="btn btn-primary" />
}

